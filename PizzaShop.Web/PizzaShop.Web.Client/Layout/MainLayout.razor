@inherits LayoutComponentBase

<div class="page min-h-screen flex flex-col md:flex-row bg-stone-50 text-stone-900">
    <div class="sidebar w-full md:w-64 bg-stone-900 text-stone-100">
        <NavMenu />
    </div>

    <main class="flex-1 flex flex-col">
        <div class="top-row px-4 h-14 flex items-center justify-between border-b border-stone-200 bg-white/80 backdrop-blur shadow-sm">
            <AuthorizeView>
                <Authorized>
                    <span class="text-sm font-medium text-stone-700">
                        @context.User.Identity?.Name
                    </span>
                </Authorized>
            </AuthorizeView>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-xs font-medium text-stone-500 hover:text-amber-600">
                About
            </a>
        </div>

        <article class="content flex-1 px-4 py-6">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
