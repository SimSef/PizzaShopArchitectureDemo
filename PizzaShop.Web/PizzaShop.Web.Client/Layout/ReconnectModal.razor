<script type="module" src="@Assets["Layout/ReconnectModal.razor.js"]"></script>

<dialog id="components-reconnect-modal" data-nosnippet class="backdrop:bg-black/60 backdrop:backdrop-blur-sm">
    <div class="components-reconnect-container max-w-sm w-full mx-auto my-10 rounded-2xl bg-[#7f2615] text-[#fef3c7] shadow-xl border border-[#5b1b0f] p-6 text-sm space-y-3">
        <div class="components-rejoining-animation flex items-center justify-center mb-4" aria-hidden="true">
            <div></div>
            <div></div>
        </div>
        <p class="components-reconnect-first-attempt-visible">
            Rejoining the server...
        </p>
        <p class="components-reconnect-repeated-attempt-visible hidden">
            Rejoin failed... trying again in <span id="components-seconds-to-next-attempt"></span> seconds.
        </p>
        <p class="components-reconnect-failed-visible hidden">
            Failed to rejoin.<br />Please retry or reload the page.
        </p>
        <button id="components-reconnect-button" class="components-reconnect-failed-visible hidden inline-flex items-center justify-center rounded-lg bg-white text-[#7f2615] px-4 py-2 text-sm font-bold tracking-wide shadow hover:shadow-lg hover:bg-[#fee2b3] transition focus:outline-none focus:ring-2 focus:ring-[#fef3c7] focus:ring-offset-2 focus:ring-offset-[#7f2615]">
            Retry
        </button>
        <p class="components-pause-visible hidden">
            The session has been paused by the server.
        </p>
        <button id="components-resume-button" class="components-pause-visible hidden inline-flex items-center justify-center rounded-lg bg-white text-[#7f2615] px-4 py-2 text-sm font-bold tracking-wide shadow hover:shadow-lg hover:bg-[#fee2b3] transition focus:outline-none focus:ring-2 focus:ring-[#fef3c7] focus:ring-offset-2 focus:ring-offset-[#7f2615]">
            Resume
        </button>
        <p class="components-resume-failed-visible hidden">
            Failed to resume the session.<br />Please reload the page.
        </p>
    </div>
</dialog>
